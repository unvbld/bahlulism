{
  "manifest_version": 3,
  "name": "Bahlul Censorship",
  "version": "1.0",
  "description": "Ekstensi Chrome yang secara otomatis menampilkan trigger warning dan blur wajah tertentu menggunakan face-api.js.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["models/*", "known_faces/*", "lib/face-api.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/face-api.min.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bahlul Censorship"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
  
